{% extends "base.html" %}

{% block content %}
<h2>[ transform ]</h2>

<script type="text/javascript" src="/static/js/transform.js">
</script>

<form name="convert" action="/transform" method="post" enctype="multipart/form-data">
  <ul>
    Source forcefield: 
    <select name="ff_from" id="ff_from" onchange="setOptions(document.convert.ff_from.options[document.convert.ff_from.selectedIndex].value);">
      <option value=" " selected="selected"></option>
      <option value="charmm36">Charmm36</option>
      <option value="berger">Berger</option>
      <option value="gromos43a1-S3">Gromos43A1-S3</option>
      <option value="gromos53a6">Gromos53A6</option>
      <option value="gromos54a7">Gromos54A7</option>
      <option value="opls">OPLS-UA</option>
    </select>
    <br>
    Target forcefield:
    <select name="ff_to" id="ff_to">
      <option value=" " selected="selected" Select an input forcefield </option>
    </select>
    <br>
    Email address for results:
    <input type="text" name="email" value="" id="email" maxlength="100" />
    <br>
    Coordinate (gro/pdb) file:
    <input type="file" name="coords">  
  </ul>
  <input type="submit" name="submit" value="Transform">
</form>
{% endblock %}
