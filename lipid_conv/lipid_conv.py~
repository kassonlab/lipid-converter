#/usr/bin/env python
import sys
import os
from structure import Protein
from transform import transform
from convert import convert

class lipid_conv():
    
    def __init__(self):
        pass
    
    def read_input(self,input,longresnum,debug=0):
        # Read in the input structure - pdb or gro based on file ending
        struct = Protein(input,longresnum,debug=0)
        return struct
    
    def transform(self,struct,ffin,ffout):
    #print struct
    #print ffin
    #print ffout
    #sys.exit()
        t = transform()
        t.read_transforms()
        new_struct = t.do(struct=struct,ffin=ffin,ffout=ffout)
        return new_struct
    
    def convert(self,struct,ffin,lin,lout,n):
        c = convert()
        c.read_conversions()
        new_struct = c.do(struct=struct,ffin=ffin,lin=lin,lout=lout,n=n)
        return new_struct

